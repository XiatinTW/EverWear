# ===== 後端 API 設定 =====
PORT=3000
NODE_ENV=development

# Gmail SMTP 設定（需要兩步驟驗證）
# GMAIL_USER= 需填寫在 .env 檔案中
# GMAIL_APP_PASSWORD= 需填寫在 .env 檔案中

# 資料庫設定
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=fashion_db

# 檔案上傳設定
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 安全設定
BCRYPT_ROUNDS=12
SESSION_SECRET=fashion-store-session-secret-development-2025

# API 設定
API_VERSION=2.1
API_RATE_LIMIT=100

# JWT 設定
JWT_SECRET=fashion-store-jwt-secret-development-key-2025
JWT_EXPIRE=7d

# 郵件設定
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
# EMAIL_USER= 需填寫在 .env 檔案中
# EMAIL_PASS= 需填寫在 .env 檔案中
EMAIL_FROM=EW Member Team <j.u871114@gmail.com>

# Google OAuth 設定
# GOOGLE_CLIENT_ID= 需填寫在 .env 檔案中
